@model IEnumerable<Theme>

@{
    ViewBag.Title = "Все Темы";
    Layout = "_AdminLayout";
}

<div class="text-center">
    <a asp-action="CreateTheme" class="btn btn-primary">Добавить Тему</a>
</div>
<div></div>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Название</th>
        <th class="text-center">Действие</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ThemeId</td>
            <td>@item.Name</td>
            <td class="text-center">
                <form asp-action="DeleteTheme" method="post">
                    <a asp-action="EditTheme" class="btn btn-sm btn-warning"
                       asp-route-themeId="@item.ThemeId">
                        Редактировать
                    </a>
                    <input type="hidden" name="ThemeId" value="@item.ThemeId" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>